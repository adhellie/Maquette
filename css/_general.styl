body
  font-size em(14/16)

.main
  background-color $grey3
  padding-bottom 54px
  
.wrapper
  clearfix()
  margin 0 auto
  width 890px
  padding-top 24px

//Text styles

.tt-1
  color $grey2
  font-size (18em/14)
  margin 0
  
.tt-2
  color $grey4
  font-size (12em/14)
  margin 0
  text-transform uppercase
p
  color $grey2
  margin 0

.price-card
  color $orange
  font-size (24em/14)
  font-weight bold

//Buttons styles
.bt-1
  background-color $orange
  border none
  border-radius 5px
  color $white
  font-weight 200
  padding 16px
  &:hover
    background-color #fcc470
    transition background-color 0.2s ease-out