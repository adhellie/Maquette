//Footer
.footer
  background-color $white
  border-radius 5px
  box-shadow()
  margin-top 14px
  padding 25px 6px
  
  ul
    clearfix()
    margin 0
    padding 0
    
  li 
    border-right 1px solid $grey3
    box-sizing border-box
    float left
    list-style none
    padding 0 20px
    text-align center
    width 33.33%
    
    &:last-child
      border none
    
    for num in 1 .. 3 
      &:nth-child({num})
        &:before
          content url("../medias/img/footer-icon"+ num + ".png")
          display block
          height 50px
          margin 0 auto
          width 40px
      
    p
      color $grey4